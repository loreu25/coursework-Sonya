<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="450" Width="350">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="30" VerticalAlignment="Center">
            <TextBlock Text="Магазин Одежды" 
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"
                       Foreground="#333"/>
            
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" 
                     Margin="0,0,0,15" 
                     Padding="5"/>
            
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                         Margin="0,0,0,20" 
                         Padding="5"/>
            
            <Button Content="Войти" 
                    Click="LoginButton_Click" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    Padding="10,5" 
                    BorderThickness="0"/>
            
            <TextBlock x:Name="txtError" 
                       Foreground="Red" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
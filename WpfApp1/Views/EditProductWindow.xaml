<Window x:Class="WpfApp1.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="450" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Название:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtName" Margin="0,0,0,10"/>
        
        <TextBlock Text="Категория:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtCategory" Margin="0,0,0,10"/>
        
        <TextBlock Text="Цена:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtPrice" Margin="0,0,0,10"/>
        
        <TextBlock Text="Размер:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtSize" Margin="0,0,0,10"/>
        
        <TextBlock Text="Цвет:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtColor" Margin="0,0,0,10"/>
        
        <TextBlock Text="Количество:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtStockQuantity" Margin="0,0,0,10"/>
        
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,20,0,0"/>
    </StackPanel>
</Window>